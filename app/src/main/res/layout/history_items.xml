<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/frame2">

    <TextView
        android:id="@+id/tv_tgl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="date here"
        android:textColor="#045faf"/>

    <TextView
        android:id="@+id/tv_id_transaksi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Id Transaction : id here"
        android:textSize="16sp"
        android:textColor="#045faf"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/tv_paket"
        android:layout_width="wrap_content"
        android:textColor="#045faf"
        android:layout_height="wrap_content"
        android:text="Package : Package here"
        android:textSize="16sp"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/tv_berat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#045faf"
        android:text="Weight : Weight here"
        android:textSize="16sp"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/tv_harga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price : Price here"
        android:textColor="#045faf"
        android:layout_marginBottom="5dp"
        android:textSize="16sp"/>

</LinearLayout>